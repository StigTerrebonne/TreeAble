<!doctype html>

<html>

	<head>
		<title>Discussions</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/css/bootstrap.css" rel="stylesheet">
		<link href="/css/bootstrap-grid.css" rel="stylesheet">
		<link href="/css/discussion.css" rel="stylesheet">
		<link href="/css/navbar.css" rel="stylesheet">
		<link rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<script src="https://code.jquery.com/jquery.js"></script>
		<script src="/js/jquery-1.11.0.js"></script>
		<script src="/js/bootstrap.bundle.js"></script>
		<script src="/js/discussion.js"></script>
	</head>

	{{> navbar}}

	<body>
		<div class="container" id="posts-container">
			<h1 class="text-center">Discussions</h1>

			<!-- Posts  -->
			<br />
			<div class="grid">
				{{#each posts.discussion}}
				<div class="row">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header">
								<h3>{{title}}</h3>
							</div>
							<div class="card-body" id={{id}}>
								<p class="card-text">{{preview}}</p>
								<button type="button" class="btn btn-success disc-post">
									View post
								</button>
							</div>
						</div>
					</div>
				</div>
				<br />
				{{/each}}
			</div>
		</div>

		<div class="container grid" id="individual-post">
			<div class="container grid" id="indiv-post0">
				<div class="row">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header">
								<h3>{{posts.discussion.[0].title}}</h3>
							</div>
							<div class="card-body">
								<p class="card-text">{{posts.discussion.[0].post}}</p>
							</div>
						</div>
					</div>
				</div>
				<br />
				{{#each posts.discussion.[0].replies}}
				<div class="row comment">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header">
								<h4>{{user}}</h4>
							</div>
							<div class="card-body">
								<p class="card-text">{{comment}}</p>
							</div>
						</div>
					</div>
				</div>
				<br />
				{{/each}}
			</div>
			<div class="container grid" id="indiv-post1">
				<div class="row">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header">
								<h3>{{posts.discussion.[1].title}}</h3>
							</div>
							<div class="card-body">
								<p class="card-text">{{posts.discussion.[1].post}}</p>
							</div>
						</div>
					</div>
				</div>
				<br />
				{{#each posts.discussion.[1].replies}}
				<div class="row comment">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header">
								<h4>{{user}}</h4>
							</div>
							<div class="card-body">
								<p class="card-text">{{comment}}</p>
							</div>
						</div>
					</div>
				</div>
				<br />
				{{/each}}
			</div>
			<div class="container grid" id="indiv-post2">
				<div class="row">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header">
								<h3>{{posts.discussion.[2].title}}</h3>
							</div>
							<div class="card-body">
								<p class="card-text">{{posts.discussion.[2].post}}</p>
							</div>
						</div>
					</div>
				</div>
				<br />
				{{#each posts.discussion.[2].replies}}
				<div class="row comment">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header">
								<h4>{{user}}</h4>
							</div>
							<div class="card-body">
								<p class="card-text">{{comment}}</p>
							</div>
						</div>
					</div>
				</div>
				<br />
				{{/each}}
			</div>

			<div class="container text-center">
				<form class="form-inline">
					<input class="form-control" id="comment-box" type="text" placeholder="Add comment">
					<button type="button" id="add-comment-btn" class="btn btn-success mb-2 disc-post">Submit</button>
				</form>
			</div>

		</div>

		<img src="https://png.pngtree.com/svg/20170809/jen_camera_add_740680.png" class="addCamera" data-toggle="modal"
			data-target="#uploadModal">

		{{> upload}}

	</body>

</html>