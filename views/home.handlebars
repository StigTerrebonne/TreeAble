<body>
	<div class="container text-center">
		<h1>Add to your ranking!</h1>

		<button type="button" class="btn" data-toggle="modal" data-target="#cameraModal">
			<i class="fa fa-camera fa-5x custom-camera" aria-hidden="true"></i>
		</button>

		<div id="cameraModal" class="modal fade" role="dialog">
			  <div class="modal-dialog">

				    <!-- Modal content-->
				    <div class="modal-content">
				      	<div class="modal-header">
					        <button type="button" class="close" data-dismiss="modal">&times;</button>
					        
				        	<img src="https://www.recycling.com/wp-content/uploads/2016/06/recycling-symbol-icon-outline-solid-dark-green.png" class="img-thumbnail" alt="Responsive image">
				      	</div>
				      	<div class="modal-body">
				      		<button type="button" class="btn btn-default btn-block" data-toggle="modal" data-target="#doneModal" data-dismiss="modal">Upload?</button>
			          		
				     	</div>
				      	<div class="modal-footer">
				      		<button type="submit" class="btn btn-danger btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancel</button>
			        	</div>
				    </div>

			  </div>
		</div>
		<!-- Followup Modal -->
		<div id="doneModal" class="modal fade" role="dialog">
			  <div class="modal-dialog">

				    <!-- Modal content-->
				    <div class="modal-content">
				      	<div class="modal-header">
					        <button type="button" class="close" data-dismiss="modal">&times;</button>
				        	<h4 class="modal-title">Your Picture Has Been Uploaded!</h4>
				      	</div>
				      	<div class="modal-body">
				      		<p>Your rank will be updated after the picture is verified</p>
				     	</div>
				      	<div class="modal-footer">
				      		<button type="submit" class="btn btn-success btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-arrow-right"></span></button>
			        	</div>
				    </div>

			  </div>
		</div>

		<h2 class="text-center">Current Ranking: 3</h2>
		<a href="leaderboard" class="btn btn-default btn-block">Leaderboard</a>
		<a href="discussion" class="btn btn-default btn-block">Discussion</a>
