<!doctype html>

<html>

	<head>
		<title>Treeable</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/css/bootstrap.css" rel="stylesheet">
		<link href="/css/bootstrap-grid.css" rel="stylesheet">
		<link href="/css/index.css" rel="stylesheet">
		<link href="/css/about.css" rel="stylesheet">
		<link rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<script src="https://code.jquery.com/jquery.js"></script>
		<script src="/js/jquery-1.11.0.js"></script>
		<script src="/js/bootstrap.bundle.js"></script>
		<script src="/js/index.js"></script>
		{{> facebook}}
		<script src="/js/facebook.js"></script>
	</head>
	<!-- background image-->
	<body style="background: url(https://www.nicepng.com/png/full/45-451008_a-winters-green-tree-image-with-snow-christmas.png) top no-repeat;
	background-size: 55%; background-color:rgb(71, 167, 212)"></body>
	
	<body>
		<div id="fb-root"></div>
		<script async defer
			src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.2&appId=2225404257524448&autoLogAppEvents=1"></script>

		<div class="container text-center h-100 w-100 d-flex justify-content-center align-items-center">
			<div class="grid">
				<div class="row">
					<div class="col col-12">
						<h1 id="app-title">Treeable</h1>

					</div>
				</div>
				<div class="row login-div">
					<div class="col col-lg-12">
						<button type="button" class="btn btn-secondary login" data-toggle="modal" data-target="#create-modal">
							Create Account
						</button>
					</div>
				</div>
				<div class="row login-div">
					<div class="col col-lg-12">
						<button type="button" class="btn btn-success login" data-toggle="modal" data-target="#login-modal">
							Log In
						</button>
					</div>
				</div>
				<div class="row">
					<div class="col col-lg-12">
						<div class="fb-login-button" data-size="large" data-button-type="continue_with"
							data-auto-logout-link="false" data-use-continue-as="false" scope="public_profile,email"
							onlogin="checkLoginState();" onclick="window.location.href='/home'" id="facebook-login"></div>
					</div>
				</div>
				<div class="row" id="chevron">
					<div class="col col-lg-12">
						<button type="button" class="btn">
							<i class="fa fa-chevron-down fa-3x"></i>
						</button>
					</div>
				</div>
			</div>
		</div>


		<div class="container h-100 w-100" id="about">
			{{> about}}
		</div>

		<!-- Create Account Modal -->
		<div class="modal fade" id="create-modal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel"
			aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Create Account</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<form id="create-acc">
							<input type="text" class="form-control" id="acc-name" placeholder="Name">
							<br />
							<input type="text" class="form-control" id="acc-username" placeholder="Username">
							<br />
						    <input type="email" class="form-control" id="acc-email" aria-describedby="emailHelp" placeholder="Enter email">
							<br />
							<input type="password" class="form-control" id="acc-password" placeholder="Password">
							<br />
							<input type="password" class="form-control" id="confirm-password" placeholder="Confirm password">
							<br />
						</form>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-success" data-dismiss="modal" id="create-account-btn">Create Account</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
					</div>
				</div>
			</div>
		</div>


		<!-- Log In Modal -->
		<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
			aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Log In</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<form id="login">
						    <input type="email" class="form-control" id="login-email" aria-describedby="emailHelp" placeholder="Enter email">
							<br />
							<input type="password" class="form-control" id="login-password" placeholder="Password">
						</form>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-success" data-dismiss="modal" id="login-btn">Login</button>
						<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
					</div>
				</div>
			</div>
		</div>

	</body>

</html>