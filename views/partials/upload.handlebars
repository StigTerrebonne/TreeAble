<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload picture</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="upload-picture" enctype="multipart/form-data">
                    <input type="file" class="form-control-file" name="photo" id="choose-file" />
                    <br />
                    {{#if alt}}
                    <input type="submit" value="Upload" id="upload-input" />
                    <script>
                        $(document).ready(function() {
                            $('#upload-input').hide();
                            $('#choose-file').click(function(res) {
                                $('#upload-input').show();
                            });
                            $('#upload-close').click(function(res) {
                                $('#upload-input').hide();
                            });
                        })
                    </script>
                    {{else}}
                    <input type="submit" value="Upload" id="upload-input" />
                    {{/if}}
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>