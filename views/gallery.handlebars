<!doctype html>

<html>

	<head>
		<title>Gallery</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="/css/bootstrap.css" rel="stylesheet">
		<link href="/css/bootstrap-grid.css" rel="stylesheet">
		<link href="/css/gallery.css" rel="stylesheet">
		<link rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<script src="https://code.jquery.com/jquery.js"></script>
		<script src="/js/jquery-1.11.0.js"></script>
		<script src="/js/bootstrap.bundle.js"></script>
		<script src="/js/galleryQuery.js"></script>
	</head>

	{{> navbar}}

	<body>
		<div class="container text-center">
			<h1>Good Work!</h1>
			<h2 class="count">{{data.photos.length}}</h2>
			<p>
				Uploads (and counting) <br />
				Swipe left and right to see pictures
			</p>
		</div>

		<div id="carousel">
			{{#each data.photos}}
			<div class="slide">
				<img src="{{image}}" />
			</div>
			{{/each}}
		</div>

		<img src="https://png.pngtree.com/svg/20170809/jen_camera_add_740680.png" class="addCamera" data-toggle="modal"
			data-target="#uploadModal">

		<!-- Upload Modal -->
		<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel"
			aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Upload picture</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<form id="upload-picture" enctype="multipart/form-data">
							<input type="file" class="form-control-file" name="photo" />
							<br />
							<input type="submit" value="Upload" id="upload-input" />
						</form>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>

		<div class="container" style="padding-top: 45px;">
			<h5 class="back-button" onclick="window.history.back();">Back</h5>
		</div>
	</body>

</html>