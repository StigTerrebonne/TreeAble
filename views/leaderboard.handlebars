<body>
	<div class="container">
		<h1 class="text-center">Leaderboard</h1>

		<!-- Table for Leaderboard-->  
		<div style="height: 250px; margin-bottom: 10px; overflow-y: auto;"><!-- Y Scroll-->
			<table class="table table-condensed table table-hover">
			    <thead>
			      	<tr>
			        	<th>Rank</th>
			        	<th>Name</th>
			        	<th>Score</th>
			      	</tr>
			    </thead>
			    <tbody>
			    	<!--Add JSON Data to leaderboard-->
			    	{{#each data.leaderboard}}
			    	<tr>
			    		<td>{{rank}}</td>
				        <td>{{name}}</td>
				        <td>{{score}}</td>
				    </tr>
					{{/each}} 
			    </tbody>
			</table>
		</div>
		<div class="text-center">
			<!-- Create Button For PopUp--> 
			<button type="button" class="btn btn-default btn-block" data-toggle="modal" data-target="#uploadModal">
	  			Improve Your Ranking <span class="glyphicon glyphicon-camera" aria-hidden="true"></span>  
			</button>
		</div>
		<!-- Modal -->
		<div id="uploadModal" class="modal fade" role="dialog">
			  <div class="modal-dialog">

				    <!-- Modal content-->
				    <div class="modal-content">
				      	<div class="modal-header">
					        <button type="button" class="close" data-dismiss="modal">&times;</button>
					        
				        	<img src="https://www.recycling.com/wp-content/uploads/2016/06/recycling-symbol-icon-outline-solid-dark-green.png" class="img-thumbnail" alt="Responsive image">
				      	</div>
				      	<div class="modal-body">
				      		<button type="button" class="btn btn-default btn-block" data-toggle="modal" data-target="#doneModal" data-dismiss="modal">Upload?</button>
			          		
				     	</div>
				      	<div class="modal-footer">
				      		<button type="submit" class="btn btn-danger btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
			        	</div>
				    </div>

			  </div>
		</div>

		<div id="doneModal" class="modal fade" role="dialog">
			  <div class="modal-dialog">

				    <!-- Modal content-->
				    <div class="modal-content">
				      	<div class="modal-header">
					        <button type="button" class="close" data-dismiss="modal">&times;</button>
				        	<h4 class="modal-title">Your Picture Has Been Uploaded!</h4>
				      	</div>
				      	<div class="modal-body">
				      		<p>Your rank will be updated after the picture is verified</p>
				     	</div>
				      	<div class="modal-footer">
				      		<button type="submit" class="btn btn-success btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-arrow-right"></span></button>
			        	</div>
				    </div>

			  </div>
		</div>



	</div>
	<!-- makes back button-->
	<body>
		<button onclick="goBack()">Go Back</button>

		<script>
		function goBack()
		{
  			window.history.back();
		}
		</script>
	</body>

	<!-- makes back forward-->
	<body>
		<button onclick="goForward()">Go Forward</button>

		<script>
		function goForward()
		{
  			window.history.forward();
		}
		</script>
	</body>

